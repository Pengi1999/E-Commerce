<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_changepwd"
    android:paddingHorizontal="16dp">


    <EditText
        android:id="@+id/edtPromoCode"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/bg_edt_setting"
        android:elevation="1dp"
        android:focusable="false"
        android:gravity="center_vertical"
        android:hint="Enter your promo code"
        android:paddingStart="20dp" />

    <ImageButton
        android:id="@+id/btnPromoCode"
        android:layout_width="44dp"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/edtPromoCode"
        android:layout_alignBottom="@+id/edtPromoCode"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_btn_promo_code"
        android:contentDescription="Promo Code"
        android:elevation="2dp"
        android:src="@drawable/ic_arrow_forward" />

    <TextView
        android:id="@+id/txtYourPromoCodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPromoCode"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:text="Your Promo Codes"
        android:textColor="@color/black_custom"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPersonal10"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/txtYourPromoCodes"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_personalpromocode10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="34sp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="18dp"
                    android:text="%"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="23dp"
                    android:layout_marginEnd="10dp"
                    android:text="off"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="22dp"
                    android:text="Personal offer"
                    android:textColor="@color/black_custom"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="23dp"
                    android:layout_alignParentBottom="true"
                    android:text="personalpromocode10"
                    android:textColor="@color/black_custom"
                    android:textSize="11sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="12dp"
                    android:text="6 days remaining"
                    android:textColor="@color/text_color_hint"
                    android:textSize="11sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnApplyPersonal10"
                    android:layout_width="94dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/bg_button_maxwidth"
                    android:text="Apply"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSummerSale"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/cardPersonal10"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/img_summersale_promocode">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="34sp"
                    android:textColor="@color/black_custom"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="18dp"
                    android:text="%"
                    android:textSize="14sp"
                    android:textColor="@color/black_custom"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="23dp"
                    android:layout_marginEnd="10dp"
                    android:text="off"
                    android:textSize="14sp"
                    android:textColor="@color/black_custom"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="22dp"
                    android:text="Summer Sale"
                    android:textColor="@color/black_custom"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="23dp"
                    android:layout_alignParentBottom="true"
                    android:text="summer2024"
                    android:textColor="@color/black_custom"
                    android:textSize="11sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="17dp"
                    android:layout_marginTop="12dp"
                    android:text="23 days remaining"
                    android:textColor="@color/text_color_hint"
                    android:textSize="11sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnApplySummerSale"
                    android:layout_width="94dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/bg_button_maxwidth"
                    android:text="Apply"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPersonal22"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/cardSummerSale"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_personalpromocode22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textSize="34sp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="18dp"
                    android:text="%"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="23dp"
                    android:layout_marginEnd="10dp"
                    android:text="off"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="22dp"
                    android:text="Personal offer"
                    android:textColor="@color/black_custom"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="23dp"
                    android:layout_alignParentBottom="true"
                    android:text="personalpromocode22"
                    android:textColor="@color/black_custom"
                    android:textSize="11sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="12dp"
                    android:text="6 days remaining"
                    android:textColor="@color/text_color_hint"
                    android:textSize="11sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnApplyPersonal22"
                    android:layout_width="94dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/bg_button_maxwidth"
                    android:text="Apply"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>