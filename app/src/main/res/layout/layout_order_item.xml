<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardProduct"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="22dp"
        android:background="@color/white"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/txtOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text=""
                android:textColor="@color/black_custom"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCreateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtOrderId"
                android:layout_alignBottom="@+id/txtOrderId"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:text=""
                android:textColor="@color/text_color_hint"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtQuantityValue"
                android:layout_alignBottom="@+id/txtQuantityValue"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="12dp"
                android:text="Quantity:"
                android:textColor="@color/text_color_hint"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtQuantityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtOrderId"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/txtQuantity"
                android:text=""
                android:textColor="@color/black_custom"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtTotalAmountValue"
                android:layout_alignBottom="@+id/txtTotalAmountValue"
                android:gravity="center"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@+id/txtTotalAmountValue"
                android:text="Total Amount:"
                android:textColor="@color/text_color_hint"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtTotalAmountValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtOrderId"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:text=""
                android:textColor="@color/black_custom"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDetails"
                android:layout_width="98dp"
                android:layout_height="36dp"
                android:text="Details"
                android:textAllCaps="false"
                android:layout_marginTop="12dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtQuantityValue"
                android:background="@drawable/bg_button_discard"/>

            <TextView
                android:id="@+id/txtOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btnDetails"
                android:layout_alignBottom="@+id/btnDetails"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="#2AA952" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>