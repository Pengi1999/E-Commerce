<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardProduct"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:contentDescription="New"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="11dp"
                    android:text=""
                    android:textColor="@color/black_custom"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtProductDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtProductName"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:text=""
                    android:textColor="@color/text_color_hint"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtProductDes"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"
                    android:text="Color:"
                    android:textColor="@color/text_color_hint"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtSelectedColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtProductDes"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/txtColor"
                    android:text=""
                    android:textColor="@color/black_custom"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtProductDes"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/txtSelectedColor"
                    android:text="Size:"
                    android:textColor="@color/text_color_hint"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtSelectedSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtProductDes"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/txtSize"
                    android:text=""
                    android:textColor="@color/black_custom"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtUnits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtColor"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="9dp"
                    android:text="Units: "
                    android:textColor="@color/text_color_hint"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtUnitsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtColor"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="9dp"
                    android:layout_toEndOf="@+id/txtUnits"
                    android:text=""
                    android:textColor="@color/black_custom"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="14dp"
                    android:text=""
                    android:textColor="@color/black_custom"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtProductPriceSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txtProductPrice"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:text=""
                    android:textColor="@color/red_button"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>